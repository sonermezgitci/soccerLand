<div style="display:inline-block;">
<%= button_to "PLAYERS", "/players" , method: :get%> 
<%= button_to "TEAM", "/teams" , method: :get%> 
<%= button_to "REVIEWS", "/reviews" , method: :get%>
</div>



<h1>All Contracts</h1>
<%@contracts.each do |contract|%>
   
    <h2>Name: <%=link_to contract.player.name, player_path(contract.player.id)%> </h2>
    <h3>Team name: <%=link_to contract.team.name, team_path(contract.team.id) %></h3>
    <h3>Start date: <%=contract.start_date %></h3>
    <h3>Expiration: <%=contract.expiration_date %></h3>
    <h3>Amount: <%=contract.amount %></h3>
    <%= button_to "UPDATE CONTRACT", edit_contract_path(contract.id), method: :get%>
    <br>
<%end%>






